<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplaySearchActivity">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SEARCH"
                android:textSize="40sp" />

            <SearchView
                android:id="@+id/searchBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20pt"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="Madrid"
                >
                <requestFocus />
            </SearchView>
            <Button
                android:id="@+id/button_madrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20pt"
                android:onClick="loadMadrid"
                android:text="Madrid" />
            <Button
                android:id="@+id/button_barcelona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:onClick="loadBarcelona"
                android:text="Barcelona" />
            <Button
                android:id="@+id/button_coruña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:onClick="loadCoruña"
                android:text="Coruña" />
        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>