<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/button_almeria"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Almeria"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_cadiz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Cadiz"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_cordoba"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Cordoba"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_granada"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Granada"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_huelva"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Huelva"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_jaen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Jaén"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_malaga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Málaga"
            android:background="@drawable/round_corners"/>
        <Button
            android:id="@+id/button_sevilla"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_marginTop="50dp"
            android:text="Sevilla"
            android:background="@drawable/round_corners"/>

    </GridLayout>
</RelativeLayout>