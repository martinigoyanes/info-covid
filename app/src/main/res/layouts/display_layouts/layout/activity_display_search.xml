<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplaySearchActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/search_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SEARCH"
                android:textSize="40sp" />

            <SearchView
                android:id="@+id/searchBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:queryHint="ZipCode or Province"
                >
                <requestFocus />
            </SearchView>

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:useDefaultMargins="true"
                android:columnCount="3"
                android:rowCount="9">

                <Button
                    android:id="@+id/button_andalucia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Andalucía"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_aragon"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Aragón"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_asturias"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Asturias"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_baleares"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Baleares"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_canarias"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Canarias"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_cantabria"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Cantabria"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_cMancha"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Castilla La Mancha"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_cLeon"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Castilla y Leon"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_cataluña"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Cataluña"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_valencia"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Valencia"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_extremadura"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Extremadura"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_galicia"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Galicia"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_rioja"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="La Rioja"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_madrid"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Madrid"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_murcia"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Murcia"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_navarra"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Navarra"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_paisvasco"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="País Vasco"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_ceuta"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:text="Ceuta"
                    android:background="@drawable/round_corners"/>
                <Button
                    android:id="@+id/button_melilla"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Melilla"
                    android:background="@drawable/round_corners"/>

            </GridLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>